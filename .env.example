# ============================================
# K6 Performance Testing - Environment Config
# ============================================

# Test Configuration
ENVIRONMENT=sandbox
TEST_STRATEGY=smoke
APPLICATION=functionary

# K6 Dashboard & Reporting
K6_WEB_DASHBOARD=true
K6_WEB_DASHBOARD_EXPORT=./reports/performance-report.html
K6_WEB_DASHBOARD_OPEN=false

# InfluxDB Configuration (for Grafana integration)
K6_INFLUXDB_ORGANIZATION=agil
K6_INFLUXDB_BUCKET=k6
K6_INFLUXDB_TOKEN=your-token-here
K6_INFLUXDB_ADDR=http://localhost:8086

# API Configuration - Sandbox
API_BASE_URL_SANDBOX=https://api-sandbox.example.com
API_AUTHORIZATION_SANDBOX=Bearer your-sandbox-token

# API Configuration - Production
API_BASE_URL_PRODUCTION=https://api.example.com
API_AUTHORIZATION_PRODUCTION=Bearer your-production-token

# Test Data Files
USERS_FILE_PATH=./data/users

# Advanced K6 Options
K6_NO_VU_CONNECTION_REUSE=false
K6_NO_CONNECTION_REUSE=false
K6_DISCARD_RESPONSE_BODIES=false
K6_HTTP_DEBUG=false

# Logging
LOG_LEVEL=info
